<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.ericsender.android_nanodegree.popmovie.activities.MainActivity">

    <fragment
        android:id="@+id/fragment_moviegrid"
        android:name="com.ericsender.android_nanodegree.popmovie.fragments.MovieListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_movie_list" />

    <FrameLayout
        android:id="@+id/fragment_moviedetails_double"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0" />

