<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MovieDetailsFragment">

    <FrameLayout
        android:id="@+id/movie_details_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|start"
        android:background="#9e010101"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|start" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/movie_details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_details_top_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#009788"
            android:gravity="center|start"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/default_movie_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="sans" />

        <RelativeLayout
            android:id="@+id/movie_details_body"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/movie_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/movie_description_blind"
                android:src="@drawable/blank" />

            <ScrollView
                android:id="@+id/movie_details_top_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_thumb"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/movie_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="5dp"
                    android:text="@string/generic_long_text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </ScrollView>

            <TextView
                android:id="@+id/movie_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/movie_thumb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/generic_year"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/movie_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/movie_year"
                android:layout_alignStart="@+id/movie_year"
                android:layout_below="@+id/movie_year"
                android:text="@string/space"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ProgressBar
                android:id="@+id/movie_duration_progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/movie_rating"
                android:layout_alignLeft="@+id/movie_year"
                android:layout_alignStart="@+id/movie_year"
                android:visibility="visible" />

            <TextView
                android:id="@+id/movie_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/movie_duration"
                android:layout_alignStart="@+id/movie_duration"
                android:layout_below="@+id/movie_duration"
                android:text="@string/generic_rating"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/button_mark_fav"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/movie_rating"
                android:layout_alignStart="@+id/movie_rating"
                android:layout_below="@+id/movie_rating"
                android:background="@drawable/fav_button_selector"
                android:padding="5dp"
                android:text="@string/mark_as_favorite" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/movie_details_async_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/movie_details_trailer_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/movie_details_trailers_title"
                    style="@style/movie_detail_segment_title"
                    android:text="@string/trailers_title" />

                <ListView
                    android:id="@+id/list_trailers"
                    style="@style/movie_detail_list"
                    android:layout_below="@+id/movie_details_trailers_title" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/movie_details_review_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/movie_details_review_title"
                    style="@style/movie_detail_segment_title"
                    android:text="@string/reviews_title" />

                <ListView
                    android:id="@+id/list_reviews"
                    style="@style/movie_detail_list"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
